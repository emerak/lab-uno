.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title= @zoo.name
      .panel-body
        .col-lg-12
          = simple_form_for @zoo, html: { class: 'form-horizontal' } do |f|
            .form-inputs
              = f.input :name
              = f.button :submit
              = link_to 'Cancel', :back

