.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title= @zoo.name
      .panel-body
        .col-lg-12
          = simple_form_for [@zoo, @animal], html: { class: 'form-horizontal' } do |f|
            .form-inputs
              = f.input :name
              = f.association :specie, collection: Specie.all
              = f.input :description, as: :text
              = f.button :submit
              = link_to t('views.cancel'), :back
